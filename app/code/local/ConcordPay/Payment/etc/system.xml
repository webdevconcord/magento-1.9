<?xml version="1.0"?>
<config>
    <sections>
        <payment>
            <groups>
                <concordpay_payment translate="label comment" module="concordpay_payment">
                    <label>ConcordPay</label>
                    <sort_order>670</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <active translate="label comment">
                            <label>Module status (enabled)</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </active>
                        <title translate="label comment">
                            <label>Payment method name</label>
                            <comment>Text displayed during checkout</comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </title>
                        <merchant translate="label comment">
                            <label>Merchant ID</label>
                            <frontend_type>text</frontend_type>
                            <comment>Merchant ID in the ConcordPay system</comment>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </merchant>
                        <secret_key translate="label comment">
                            <label>Secret key</label>
                            <frontend_type>text</frontend_type>
                            <comment>Secret key in the ConcordPay system</comment>
                            <sort_order>40</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </secret_key>
                        <order_status translate="label comment">
                            <label>New order status</label>
                            <frontend_type>select</frontend_type>
                            <comment>Order status after creation</comment>
                            <source_model>adminhtml/system_config_source_order_status</source_model>
                            <sort_order>50</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </order_status>
                        <after_pay_status translate="label comment">
                            <label>Status after payment</label>
                            <frontend_type>select</frontend_type>
                            <comment>Order status after successful payment</comment>
                            <source_model>adminhtml/system_config_source_order_status</source_model>
                            <sort_order>60</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </after_pay_status>
                        <after_refund_status translate="label comment">
                            <label>Status after payment refund</label>
                            <frontend_type>select</frontend_type>
                            <comment>Order status after payment is returned to the customer</comment>
                            <source_model>adminhtml/system_config_source_order_status</source_model>
                            <sort_order>70</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </after_refund_status>
                        <language translate="label comment">
                            <label>ConcordPay payment page language</label>
                            <frontend_type>select</frontend_type>
                            <source_model>concordpay_payment/source_language</source_model>
                            <sort_order>80</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </language>
                    </fields>
                </concordpay_payment>
            </groups>
        </payment>
    </sections>
</config>